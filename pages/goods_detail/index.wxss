.container {
  padding-bottom: 100rpx;
}
.swiper {
  width: 750rpx;
  height: 750rpx;
  /* background: rgb(224, 10, 10); */
}
.swiper image {
  width: 750rpx;
  height: 750rpx;
}

.info_wrapper {
  padding: 20rpx 0 20rpx 20rpx;
}

.price{
  font-size: 22px;
  color: red;
}

.goods_info {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods_title {
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods_star{
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-left: 40rpx;
  color: #999;
  border-left: 1px #ccc solid;
}
.goods_star text{
  font-size: 13px;
}
.goods_other{
  margin-top: 20rpx;
  font-size: 14px;
  color: #999;
}

/* 页脚 */
.btns{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 -2px 2px #eee;
}
.btns > view{
  height: 100rpx;
}

.contact{
  position: absolute;
  left: 0;
  top: 0;
  width: 20%!important;
  height: 100%;
  opacity: 0;
}

.btns-white{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999;
}
.btns-color{
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: orange;
}
.btns-color:last-child{
  background: red;
}

/* 商品详细信息 */
.tab {
  display: flex;
  border-top: 10px #eee solid;
}

.tab-item{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.tab-item.active{
  background: red;
  color: #fff;
}

/* 商品规格 */
.attrs{
  padding: 20rpx;
}
.atr-item {
  line-height: 2;
}
.attr-item text {
  margin-right: 20rpx;
}
