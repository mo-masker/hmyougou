.swiper {
  height: 750rpx;
  background: rgb(224, 10, 10);
}

.info_wrapper {
  padding: 20px 0 20px 20px;
}

.price{
  font-size: 22px;
  color: red;
}

.goods_info {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods_title {
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods_star{
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-left: 40rpx;
  color: #999;
  border-left: 1px #ccc solid;
}
.goods_star text{
  font-size: 13px;
}
.goods_other{
  margin-top: 20rpx;
  font-size: 14px;
  color: #999;
}

/* 页脚 */
.btns{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 -2px 2px #eee;
}
.btns > view{
  height: 100rpx;
}

.btns-white{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999;
}
.btns-color{
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: orange;
}
.btns-color:last-child{
  background: red;
}
