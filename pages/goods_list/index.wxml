<!--pages/goods_list/index.wxml-->
<view class="container">
  <!-- 顶部的搜索栏 -->
  <navigator url="">
    <view class="search">
      <view class="searchInput">
        <icon type="search" size="20"></icon>
        小米
      </view>
    </view>
  </navigator>

  <!-- 中间的tab栏 -->
  <view class="tab">
    <view wx:for="{{ ['综合','销量','价格'] }}" wx:key="index" class="tab-item">
      {{item}}
      <text wx:if="{{ index == 2}}" class="iconfont icon-paixu"></text>
    </view>
  </view>
  <!-- 商品列表 -->
  <view class="list">
    <navigator url="" class="goods-item">
      <image mode="aspectFill" src="https://img12.360buyimg.com/jdcms/s150x150_jfs/t1/90031/10/12246/138180/5e465475Eb10977b1/34ccec3517813dea.jpg.webp"></image>
      <view class="goods-item-right">
        <view class="goods-item-title">日本株式会社DCore按摩椅 家用商用全身太空舱全自动 多功能老年人电动豪华DC-001C按摩椅家电 尊贵黑（少量现货）</view>
        <view class="goods-item-price">
        <text>￥</text>
        69.00</view>
      </view>
    </navigator>
  </view>
</view>