<!--index.wxml-->
<view class="container">
  <!-- 头部的搜索栏 -->
  <navigator url="">
    <view class="search">
      <view class="searchInput">
      <icon type="search" size="20"></icon>
        搜索
      </view>
    </view>
  </navigator>

  <!-- 轮播图 -->
  <swiper 
  class="swiper"
        indicator-dots
        indicator-color="rgba(255, 255, 255, .3)"
        indicator-active-color="#000"
        circular="true"
        >
        <block wx:for="{{banners}}" wx:key="index">
          <swiper-item>
            <image src="{{ item.image_src }}"></image>
          </swiper-item>
        </block>
      </swiper>
</view>