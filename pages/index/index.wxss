/* 搜索栏 */
.search{
  background: #ff2d4a;
  padding: 20rpx 16rpx;
}

.searchInput{
  height: 60rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #ccc;
}

.searchInput icon{
  margin-right: 5rpx;
}

/* 轮播图 */
.swiper{
  height: 340rpx;
}
.swiper image{
  width: 100%;
  height: 340rpx;
}

/* 导航菜单 */
.menus{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
}
.menus image{
  width: 128rpx;
  height: 140rpx;
}

/* 楼层分类 */
.floor{
  margin-bottom: 20rpx;
}
.floor-title{
  width: 100%;
  height: 60rpx;
}

.floor-content{
  display: flex;
  padding: 16rpx;
}
.floor-content-left{
  margin-right: 10rpx;
}
.floor-content-left image{
  width: 232rpx;
  height: 386rpx;
}

.floor-content-right{
  flex: 1;
  display: flex;
  justify-content: space-between;
  /* 换行 */
  flex-wrap: wrap;
}
.floor-content-right image{
  width: 233rpx;
  height: 188rpx;
}
.floor + .floor .floor-content-right image{
  width: 193rpx;
}
.floor + .floor .floor-content-right image:nth-child(3n+1){
  width: 273rpx;
}
