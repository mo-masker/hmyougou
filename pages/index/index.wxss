

/* 轮播图 */
.swiper{
  height: 340rpx;
}
.swiper image{
  width: 100%;
  height: 340rpx;
}

/* 导航菜单 */
.menus{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
}
.menus image{
  width: 128rpx;
  height: 140rpx;
}

/* 楼层分类 */
.floor{
  margin-bottom: 20rpx;
}
.floor-title{
  width: 100%;
  height: 60rpx;
}

.floor-content{
  display: flex;
  padding: 16rpx;
}
.floor-content-left{
  margin-right: 10rpx;
}
.floor-content-left image{
  width: 232rpx;
  height: 386rpx;
}

.floor-content-right{
  flex: 1;
  display: flex;
  justify-content: space-between;
  /* 换行 */
  flex-wrap: wrap;
}
.floor-content-right image{
  width: 233rpx;
  height: 188rpx;
}
.floor + .floor .floor-content-right image{
  width: 193rpx;
}
.floor + .floor .floor-content-right image:nth-child(3n+1){
  width: 273rpx;
}

/* 回到顶部 */
.toTop{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 12px;
  position: fixed;
  right: 20rpx;
  bottom: 50rpx;
}

.arrow{
  width: 12px;
  height: 12px;
  border-left: 1px #333 solid;
  border-top: 1px #333 solid;
  transform: rotate(45deg);
  position: relative;
  top: 5rpx;
}
